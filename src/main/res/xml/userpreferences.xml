<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:key="PREF_AUTO_UPDATE"
        android:title="Auto update public ideas?"
        android:defaultValue="true"/>
    <ListPreference
        android:key="PREF_UPDATE_FREQ_INDEX"
        android:title="Update Frequency"
        android:summary="Frequency at which content is updated"
        android:entries="@array/update_freq_options"
        android:entryValues="@array/update_freq_values"
        android:defaultValue="60"/>
</PreferenceScreen>